@page "/projects/{projectId:int}/tickets/add"


<MudText Typo="Typo.h6">Add Tickets</MudText>

<EditForm Model="_ticket" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <MudItem xs="12" sm="7">
        <MudCard>
            <MudCardContent>
                <MudTextField Label="Title" Required="true" @bind-Value="_ticket.Title" For="@(() => _ticket.Title)"/>
                <MudTextField Label="Description" @bind-Value="_ticket.Description" For="@(() => _ticket.Description)"/>
                <MudTextField Label="Owner" @bind-Value="_ticket.Owner" For="@(() => _ticket.Owner)"/>
                <MudTextField Label="Due To" Format="yyyy-MM-dd" InputType="InputType.Date" @bind-Value="_ticket.DueTo" For="@(() => _ticket.DueTo)"/>
                <MudTextField Label="Created At" Format="yyyy-MM-dd" InputType="InputType.Date" @bind-Value="_ticket.CreatedAt" For="@(() => _ticket.CreatedAt)"/>
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Add</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</EditForm>